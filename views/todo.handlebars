<section class=content>
  <a href="/todo">
    <header>To Do List</header>
  </a>
</section>

<div id="myDIV" class="header">
  <h2>My To Do List</h2>
  <input type="text" id="todoTitle" placeholder="Title...">
  <button id="todoBtn" class="addBtn">Add</button>
</div>

<ul id="myList">

</ul>

<div id="todos" class="container-fluid flex flex-wrap justify-around">

    {{#each todos}}
    <span class='p-8 border-2 m-4 w-1/4 border-solid border-black bg-zinc-100'>
        <p class='text-center text-2xl'>{{name}}</p>
        {{#each this.todoItems}}
{{this.name}} 
<button id="todoItemDelete{{this.id}}" data-id="{{this.id}}" class="deleteItemBtn btn btn-primary px-2 rounded-lg bg-blue-300 border-black border-4 border-double hover:bg-blue-500 hover:border-solid hover:border-4'">Delete</button><br/></br>
  
  

{{/each}}
      <input type="text" class="newTodoInput" id="todoItemTitle{{this.id}}" data-id="{{this.id}}" placeholder="New todo item.." /> <button id="todoItemBtn" data-id="{{this.id}}" class="btn addItemBtn btn-primary px-2 rounded-lg bg-blue-300 border-black border-4 border-double hover:bg-blue-500 hover:border-solid hover:border-4'">Add</button>
  </span>
    {{/each}}


<script src="/js/toDo.js"></script>