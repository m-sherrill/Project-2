<span class='flex flex-col'>
  <span class='flex justify-around self-center border-4 border-solid border-black w-1/2'>

    <a class='hover:text-slate-300 focus:animate-ping' href='/notes'>
      Notes
    </a>
    <a class='hover:text-slate-300 focus:animate-ping' href="/calendar">
      <div>Calendar</div>
    </a>
    <a class='hover:text-slate-300 focus:animate-ping' href="/contacts">
      <div>Contacts</div>
    </a>

    <a class='hover:text-slate-300 focus:animate-ping' href="/toDo">

      <div>To DOs!</div>
    </a>
  </span>
</span>
<section class=content>
  <a href="/todo">
    <header>To Do List</header>
  </a>
</section>

<div id="myDIV" class="header">
  <h2>My To Do List</h2>
  <input type="text" id="todoTitle" placeholder="Title...">
  <button id="todoBtn" class="addBtn">Add</button>
</div>

<ul id="myList">

</ul>

<div id="todos" class="container-fluid flex flex-wrap justify-around">

  {{#each todos}}
  <div
    class='p-8 border-2 m-4 w-1/4 border-solid border-black bg-zinc-100'>
    <div class='text-center text-2xl expand-one container-fluid flex justify-between' data-id="{{id}}">{{name}}<button><img src="./images/plus.png"></button></div><br /></br>
<ul>

    {{#each this.todoItems}}
      <li><div class="container-fluid flex justify-between content{{this.todo_id}}" id="todoContent">{{this.name}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<button id="todoItemDelete{{this.todo_id}}" data-id="{{this.todo_id}}" class="deleteItemBtn"><img
          src="./images/delete.png"></button></div></li>
      {{/each}}
      </ul>
      <center><button id="todoItemBtn" data-id="{{this.id}}"
          class="btn addItemBtn btn-primary px-2 rounded-lg bg-blue-300 border-black border-4 border-double hover:bg-blue-500 hover:border-solid hover:border-4'">Add</button>
      </center>
    
  </div>
  {{/each}}


  <script src="/js/toDo.js"></script>