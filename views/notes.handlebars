<header class='text-center text-7xl'>Notes</header>


<div class="container my-3 text-center">
    <h1 class=''>Take your Notes here</h1>
    <div class="card">
        <div class="card-body flex flex-col place-content-center">

            <div class=" flex flex-col place-content-center">
                <label for="title">Note Title</label>
                <input class="self-center border-solid border-2 border-black" id="noteTitle" rows="3" />

                <textarea class="form-control self-center my-2 w-1/2" id="noteBody" rows="5">
                    </textarea>
            </div>
            <button class="btn btn-primary self-center" id="noteBtn" style="background-color:green">
                Add Note
            </button>
        </div>
    </div>
    <hr>
    <h1 class='text-4xl'>Your Notes</h1>
    <hr>

    <div id="notes" class="container-fluid flex flex-wrap justify-around">

        {{#each users.notes as |note|}}
        <span class='p-8 border-2 m-4 w-1/4 border-solid border-black'>
            <p class='text-center text-2xl'>{{note.title}}</p>
            <p class='text-center'>{{note.content}}</p>
            <button
                class='btn btn-primary px-2 rounded-lg bg-blue-300 border-black border-4 border-double hover:bg-blue-500 hover:border-solid hover:border-4'
                id='deleteNote' data-id='{{note.id}}'>
                Delete</button>
            <button
                class='btn btn-primary px-2 rounded-lg bg-blue-300 border-black border-4 border-double hover:bg-blue-500 hover:border-solid hover:border-4'
                id='updateBtn' data-id='{{note.id}}'>update</button>
            <ul class='text-center'>Created at: {{format_date note.createdAt}}</ul>

            <ul class='text-center text-xs'>Last Update: {{format_date note.updatedAt}}</ul>
        </span>
        {{/each}}

    </div>
</div>


{{#each users.notes as |notes|}}
<div id="updateNoteModal{{notes.id}}" class="modal  closeModal">
    <div class="modal-content">
        <div class=' border-black border-2 border-solid bg-zinc-100 '>
            <h2>Update Note</h2>
            <form class="form update-note-form m-4 border-black border-2 bg-zinc-50 border-solid"
                id="update-contact-form">
                <div class="form-group m-2">
                    <label for="noteTitleUpdate">Title Update</label>
                    <input class="form-input border-2 border-solid border-black" type="text" id="noteTitleUpdate" />
                </div>
                <div class="form-group m-2">
                    <label for="noteContentUpdate">Note Content</label>
                    <input class="form-input border-2 border-solid border-black" type="text" id="noteContentUpdate" />
                </div>
            </form>
            <button
                class="btn btn-primary px-2 rounded-lg bg-blue-300 border-black border-4 border-double hover:bg-blue-500 hover:border-solid hover:border-4"
                id="updateNoteBtn" data-id="{{notes.id}}" type="submit">Update Note</button> <button
                class="btn btn-primary px-2 rounded-lg bg-blue-300 border-black border-4 border-double hover:bg-blue-500 hover:border-solid hover:border-4 close">Cancel</span>
        </div>

    </div>

</div>
{{/each}}